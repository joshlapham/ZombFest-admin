<% @page_title = "Add Social Media Link" %>

<%= link_to("<< Back", {:controller => 'dashboard', :action => 'index'}, :class => 'back-link btn btn-default') %>

<br />

<section id="add-new-social-media-link">

	<h3>Add Social Media Link</h3>

	<%= form_for(:social_media_link, :url => {:action => 'create'}) do |t| %>
		
		<table class="table table-bordered table-condensed table-striped">
			<tr>
				<th>Title</th>
				<td><%= t.text_field(:title) %></td>
			</tr>
			<tr>
				<th>URL</th>
				<td><%= t.text_field(:url) %></td>
			</tr>
			<tr>
				<th>Image URL</th>
				<td><%= t.text_field(:image_url) %></td>
			</tr>
		</table>

		<%= submit_tag("Create Social Media Link", :class => "btn btn-success") %>

	<% end %>

</section>

<br />
