<section id="edit-event">

	<h3>Edit Event</h3>

	<%= form_for(:event, :url => {:controller => 'events', :action => 'update', :id => @event.id}) do |t| %>
		
		<table class="table table-bordered table-condensed">
			<tr>
				<th>Year</th>
				<td><%= t.text_field(:year) %></td>
			</tr>
		</table>

		<%= submit_tag("Update Event", :class => "btn btn-primary") %>

	<% end %>

</section>

