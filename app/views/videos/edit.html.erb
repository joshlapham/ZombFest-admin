<section id="edit-video">

	<h3>Edit Video</h3>

	<%= form_for(@videos, :url => {:controller => 'videos', :action => 'update', :id => @videos.id}) do |t| %>
		
		<table class="table table-bordered table-condensed table-striped">
			<tr>
				<th>ID For App</th>
				<td><%= t.text_field :id_for_app %></td>
			</tr>
			<tr>
				<th>Title</th>
				<td><%= t.text_field :title %></td>
			</tr>
			<tr>
				<th>Author</th>
				<td><%= t.text_field :author %></td>
			</tr>
			<tr>
				<th>Year</th>
				<td><%= t.text_field :year %></td>
			</tr>
			<tr>
				<th>Duration</th>
				<td><%= t.text_field :duration %></td>
			</tr>
			<tr>
				<th>Video URL</th>
				<td><%= t.text_field :video_url %></td>
			</tr>
			<tr>
				<th>Image URL</th>
				<td><%= t.text_field :image_url %></td>
			</tr>
			<tr>
				<th>Is Winner?</th>
				<td><%= t.check_box :is_winner %></td>
			</tr>
			<tr>
				<th>Is Entrant?</th>
				<td><%= t.check_box :is_entrant %></td>
			</tr>
			<tr>
				<th>Is Other?</th>
				<td><%= t.check_box :is_other %></td>
			</tr>
		</table>

		<%= submit_tag('Update Video', :class => 'btn btn-success') %>

	<% end %>

</section>

<br />
