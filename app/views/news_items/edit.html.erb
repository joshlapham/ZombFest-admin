<section id="edit-news-item">

	<h3>Edit News Item</h3>

	<%= form_for(:news_item, :url => {:action => 'update', :id => @news_item.id}) do |t| %>
		
		<table class="table table-bordered table-condensed table-striped">
			<tr>
				<th>ID For App</th>
				<td><%= t.text_field(:id_for_app) %></td>
			</tr>
			<tr>
				<th>Title</th>
				<td><%= t.text_field(:title) %></td>
			</tr>
			<tr>
				<th>Date</th>
				<td><%= t.text_field(:date) %></td>
			</tr>
			<tr>
				<th>Content</th>
				<td><%= t.text_area(:content, :cols => '50', :rows => '10') %></td>
			</tr>
			<tr>
				<th>URL</th>
				<td><%= t.text_field(:url) %></td>
			</tr>
		</table>

		<%= submit_tag("Update News Item", :class => "btn btn-success") %>

	<% end %>

</section>

<br />
