<section id="edit-event">

	<h3>Edit Past Event</h3>

	<%= form_for(:past_event, :url => {:controller => 'past_events', :action => 'update', :id => @past_event.id}) do |t| %>
		
		<table class="table table-bordered table-condensed table-striped">
			<tr>
				<th>Year</th>
				<td><%= t.text_field(:year) %></td>
			</tr>
			<tr>
				<th>Date</th>
				<td><%= t.text_field(:date) %></td>
			</tr>
			<tr>
				<th>Content</th>
				<td><%= t.text_area(:content, :cols => '50', :rows => '10') %></td>
			</tr>
			<tr>
				<th>Image URL</th>
				<td><%= t.text_field(:image_url) %></td>
			</tr>
		</table>

		<%= submit_tag("Update Past Event", :class => "btn btn-success") %>

	<% end %>

</section>

<br />
